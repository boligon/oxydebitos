                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Number types -->
    <property name="number_10" value="NUMERIC(10)" dbms="oracle, postgresql, h2"/>
    <property name="number_15_2" value="NUMERIC(15, 2)" dbms="oracle, postgresql, h2"/>

    <!-- Date/Time types -->
    <property name="date" value="date" dbms="oracle, postgresql, h2"/>

